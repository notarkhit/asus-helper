{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
	"moduleResolution":"node",
    "outDir": "./resources/js",
    "rootDir": "./resources/js",
	"baseUrl":".",
	"paths":{
		"@neutralinojs/lib": ["node_modules/@neutralinojs/lib/dist/index.js"]
	},
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
	"typeRoots": [
		"./node_modules/@neutralinojs/lib/dist"
	]
	
  },
  "include": [
	  "resources/js/**/*.ts",
	  "declarations.d.ts"
  ],
  "files": [
	  "resources/js/asushelper.ts"
  ]
}

